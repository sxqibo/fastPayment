{
  "name": "sxqibo/fast-payment",
  "description": "通联支付网上收银统一下单接口，提供统一支付、统一扫码、交易查询、推送通知、退款等功能，新增微信批量转账和查询功能",
  "type": "library",
  "keywords": [
    "union",
    "wechatpay"
  ],
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "Sxqibo\\FastPayment\\": "src/"
    }
  },
  "authors": [
    {
      "name": "weifeng",
      "email": "50098161@qq.com"
    }
  ],
  "require": {
    "php": ">=7.0",
    "guzzlehttp/guzzle": "~7.0",
    "wechatpay/wechatpay-guzzle-middleware": "^0.2.2",
    "ext-openssl": "*",
    "ext-curl": "*",
    "ext-json": "*",
    "ext-simplexml": "*",
    "ext-libxml": "*",
    "overtrue/wechat": "^5.6",
    "yansongda/pay": "~3.5.0",
    "hyperf/pimple": "~2.2.0"
  },
  "config": {
    "allow-plugins": {
      "easywechat-composer/easywechat-composer": true
    }
  }
}
